<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/menubar">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/menu"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Add Approver"
                android:textSize="12dp"
                android:textColor="#424242">
            </TextView>
            <TextView
                android:layout_width="260dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Peter Dinklage"
                android:textColor="#909090"
                android:textSize="8dp"
                android:ems="20"
                android:background="@drawable/search">
            </TextView>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/searchimage">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="01 result found"
                android:textSize="7dp"
                android:textColor="#909090">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/line1"
                android:layout_marginTop="4dp">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:src="@drawable/profile">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:paddingLeft="52dp"
                android:paddingTop="6dp"
                android:text="Peter Dinklage"
                android:textColor="#747474"
                android:textSize="10dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:paddingLeft="52dp"
                android:text="Lorem ipsum doler sit amet."
                android:textColor="#909090"
                android:textSize="10dp">
            </TextView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="18dp"
                android:paddingTop="4dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/add">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/line1"
                android:layout_marginTop="4dp">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="425dp">
            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="CANCEL"
                android:textColor="#595959"
                android:textSize="10dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/line2">
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:text="None selected"
                android:padding="4dp"
                android:textSize="9dp"
                android:textColor="#707070"
                android:background="@drawable/selected">
            </TextView>
            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_done"
                android:text="DONE"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:textStyle="bold">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>