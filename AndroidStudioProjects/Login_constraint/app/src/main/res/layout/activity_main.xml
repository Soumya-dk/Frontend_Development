<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="303dp"
        android:layout_height="349dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_bold"
            tools:ignore="MissingConstraints">
        </TextView>
        <TextView
            android:id="@+id/text2"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/email_border"
            android:ems="20"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:shadowColor="#00000034"
            android:text="Email or Phone Number"
            android:textColor="#747474"
            android:textSize="10dp"
            app:fontFamily="@font/roboto"
            app:layout_constraintTop_toTopOf="@id/text1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">
        </TextView>
        <ImageView
            android:id="@+id/image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/warning"
            app:layout_constraintTop_toTopOf="@id/text2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp">
        </ImageView>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="35dp"
            android:text="This field is required"
            android:textColor="#BF574A"
            android:textSize="8dp"
            app:fontFamily="@font/roboto"
            app:layout_constraintLeft_toLeftOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/text2"
            tools:ignore="InvalidId,UnknownId">
        </TextView>
        <TextView
            android:layout_width="247dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/email_border"
            android:ems="50"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:text="Password"
            android:textColor="#747474"
            android:textSize="10dp"
            app:fontFamily="@font/roboto"
            app:layout_constraintTop_toTopOf="@id/text3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">
        </TextView>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="78dp"
            android:src="@drawable/warning"
            app:layout_constraintTop_toTopOf="@id/text3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="78dp"
            android:text="This field is required"
            android:textColor="#BF574A"
            android:textSize="8dp"
            app:fontFamily="@font/roboto"
            app:layout_constraintLeft_toLeftOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/text3"
            tools:ignore="InvalidId,UnknownId">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="100dp"
            android:layout_marginRight="52dp"
            android:text="Forgot password?"
            android:textColor="#747474"
            android:textSize="10dp"
            app:fontFamily="@font/roboto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text3">
        </TextView>
        <Button
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="172dp"
            android:background="@drawable/loginbutton"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto"
            app:layout_constraintLeft_toLeftOf="@id/text3"
            app:layout_constraintTop_toTopOf="@id/text3"
            tools:ignore="MissingConstraints">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>