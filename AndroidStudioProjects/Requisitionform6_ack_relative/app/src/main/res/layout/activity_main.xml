<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/menubar">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/menu">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:background="#FDFDFD">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="REQUISITION"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_alignParentLeft="true">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#D3D3D3"
                    android:textSize="10dp">
                </TextView>
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/line">
                </TextView>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#D3D3D3"
                    android:textSize="10dp"
                    android:background="@drawable/circle1">
                </TextView>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57dp"
                    android:background="@drawable/line">
                </TextView>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="85dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#D3D3D3"
                    android:textSize="10dp"
                    android:background="@drawable/circle1">
                </TextView>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/line">
                </TextView>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="130dp"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#D3D3D3"
                    android:textSize="10dp"
                    android:background="@drawable/circle1">
                </TextView>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/line">
                </TextView>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="175dp"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#D3D3D3"
                    android:textSize="10dp"
                    android:background="@drawable/circle1">
                </TextView>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="192dp"
                    android:background="@drawable/line">
                </TextView>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="220dp"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:background="@drawable/circle">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="115dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textColor="#B5B5B5"
                android:textSize="12dp"
                android:text="ACKNOWLEDGEMENT"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:textColor="#505050"
                android:textStyle="bold"
                android:textSize="11dp"
                android:text="Your request has been saved as draft.">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing\nelit. Mauris mattis, tortor sit amet tempor vehicula,\ntortor ipsum faucibus nunc, id aliquam lacus odio nec\nmagna. Cras a ipsum placerat, efficitur nibh sed,\niaculis elit. Mauris semper tempor facilisis."
                android:textSize="9dp"
                android:textColor="#505050">
            </TextView>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>